def is_owner_or_coowner(user):
    return True  # Ï€ÏÎ¿ÏƒÏ‰ÏÎ¹Î½Î¬, ÎµÏƒÏ Î¸Î± Î²Î¬Î»ÎµÎ¹Ï‚ Ï„Î· Î´Î¹ÎºÎ® ÏƒÎ¿Ï… Î»Î¿Î³Î¹ÎºÎ®

class PrefixCommands(commands.Cog):
    def __init__(self, bot):
        self.bot = bot

    @commands.command()
    async def say(self, ctx, *, message: str):
        if not is_owner_or_coowner(ctx.author):
            return await ctx.reply("Î”ÎµÎ½ Î­Ï‡ÎµÎ¹Ï‚ Î´Î¹ÎºÎ±Î¯Ï‰Î¼Î± Î½Î± Ï‡ÏÎ·ÏƒÎ¹Î¼Î¿Ï€Î¿Î¹Î®ÏƒÎµÎ¹Ï‚ Î±Ï…Ï„Î® Ï„Î·Î½ ÎµÎ½Ï„Î¿Î»Î®.")
        await ctx.send(message)

    @commands.command()
    async def dmail(self, ctx, *, message: str):
        if not is_owner_or_coowner(ctx.author):
            return await ctx.reply("Î”ÎµÎ½ Î­Ï‡ÎµÎ¹Ï‚ Î´Î¹ÎºÎ±Î¯Ï‰Î¼Î± Î½Î± Ï‡ÏÎ·ÏƒÎ¹Î¼Î¿Ï€Î¿Î¹Î®ÏƒÎµÎ¹Ï‚ Î±Ï…Ï„Î® Ï„Î·Î½ ÎµÎ½Ï„Î¿Î»Î®.")
        sent = 0
        for member in ctx.guild.members:
            if member.bot:
                continue
            try:
                await member.send(message)
                sent += 1
            except:
                continue
        await ctx.reply(f"Î¤Î¿ Î¼Î®Î½Ï…Î¼Î± ÏƒÏ„Î¬Î»Î¸Î·ÎºÎµ ÏƒÎµ {sent} Î¼Î­Î»Î·.")

