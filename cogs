        await ctx.send(embed=embed, view=MainTicketPanel())
        await ctx.reply("Î¤Î¿ main ticket panel ÏƒÏ„Î¬Î»Î¸Î·ÎºÎµ.", delete_after=2)

async def setup(bot):
